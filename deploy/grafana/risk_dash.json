          {
            "expr": "risk_month_pnl_pct",
            "legendFormat": "MTD %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": -3.0
